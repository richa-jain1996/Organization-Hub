<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/a"
    tools:context="com.example.hi_tech1.swipe.ngodisplay">

<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="New Text"
    android:id="@+id/ngo_s_id"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:textAlignment="center"
    android:textSize="30dp"
    android:textColor="#dd1100" />

<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="New Text"
    android:id="@+id/ngo_s_name"
    android:layout_marginTop="39dp"
    android:layout_below="@+id/ngo_s_id"
    android:layout_alignLeft="@+id/ngo_s_id"
    android:layout_alignStart="@+id/ngo_s_id"
    android:textAlignment="center"
    android:textColor="#aa1122"
    android:textSize="30dp" />

<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="New Text"
    android:id="@+id/ngo_s_phone"
    android:layout_below="@+id/ngo_s_name"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="43dp"
    android:textAlignment="center"
    android:textSize="30dp"
    android:textColor="#dd1100" />

<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="New Text"
    android:id="@+id/ngo_s_email"
    android:layout_marginTop="44dp"
    android:layout_below="@+id/ngo_s_phone"
    android:layout_alignLeft="@+id/ngo_s_name"
    android:layout_alignStart="@+id/ngo_s_name"
    android:textAlignment="center"
    android:textSize="30dp"
    android:textColor="#aa1122" />


<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="New Text"
    android:id="@+id/ngo_s_address"
    android:layout_below="@+id/ngo_s_email"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="43dp"
    android:textAlignment="center"
    android:textSize="30dp"
    android:textColor="#dd1100" />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/ngo_s_type"
        android:layout_below="@+id/ngo_s_address"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textColor="#dd1100" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Email"
    android:id="@+id/go_email"
    android:layout_alignTop="@+id/go_map"
    android:layout_toLeftOf="@+id/go_map"
    android:layout_toStartOf="@+id/go_map" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Call"
    android:id="@+id/go_call"
    android:layout_alignTop="@+id/go_email"
    android:layout_toRightOf="@+id/go_map"
    android:layout_toEndOf="@+id/go_map" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Maps"
    android:id="@+id/go_map"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true" />
</RelativeLayout>
