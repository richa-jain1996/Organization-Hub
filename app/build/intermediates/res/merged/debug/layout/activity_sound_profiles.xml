<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/congruent_outline"
    android:textAlignment="center"
    android:layout_marginLeft="10dp"
    android:layout_marginStart="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ORAGANISATION DETAILS"
        android:layout_marginTop="20dp"
        android:textSize="35sp"
        android:gravity="center"
        android:textStyle="bold"

        android:textColor="#efeff2"
        android:shadowColor="#a69eb0"
        android:shadowDx="6"
        android:shadowDy="-6"
        android:duration="2000"
        android:startOffset="1000"
        android:repeatMode="restart"
        android:repeatCount="infinite"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f2e2cd"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="50dp"
        android:text="CODE NO :"
        android:id="@+id/textView5" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/b_code"
        android:hint="Enter the code number of organisation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#f2e2cd"
        android:text="NAME :"
        android:id="@+id/textView6" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/b_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f2e2cd"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CONTACT DETAILS :"
        android:id="@+id/textView8" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/b_contact" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#f2e2cd"
        android:text="ADDRESS :"
        android:id="@+id/textView7" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/b_address" />




</LinearLayout>